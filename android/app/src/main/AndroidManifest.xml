<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fanyafeng.react">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- rn调试activity -->
        <activity android:name="com.facebook.react.devsupport.DevSettingsActivity" />
        <activity
            android:name=".MyReactActivity"
            android:label="@string/title_activity_react"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TestReactActivity"
            android:label="@string/title_activity_test_react"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.FromReactActivity"
            android:label="@string/title_activity_from_react"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".rnfragment.FragmentMainActivity"
            android:label="@string/title_activity_fagment_main"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
